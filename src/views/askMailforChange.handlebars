{{! GET BACK BUTTOM }}
<div class="back">
  <a href="/login"> back to login</a>
</div>
<div class="box">
  <h1>Forgot Password</h1>
  <hr />
  <form class="box" method="POST" action="/api/sessions/forgotPassword">
    <div>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required />
    </div>
    <button type="submit">Send Reset Link</button>
  </form>
</div>
{{#if success}}
  <div class="success">Check your email for the reset link</div>
{{/if}}

{{#if error}}
  <div class="error">{{error}}</div>
{{/if}}