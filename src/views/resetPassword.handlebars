<div class="box">
  <h1>Reset Password</h1>
  <form class="box" method="POST" action="/api/sessions/resetPassword">
    <input type="hidden" name="token" value="{{token}}" />
    <input
      type="password"
      id="password"
      name="password"
      placeholder="New Password"
    />
    <button type="submit">Reset Password</button>
  </form>
</div>