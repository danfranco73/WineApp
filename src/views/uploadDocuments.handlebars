<div class="container">
  <div class="box">
    <h1><span class="black">Upload Documents</span></h1>
    <form
      id="uploadForm"
      enctype="multipart/form-data"
      method="POST"
      action="/api/users/:uid/documents"
    >
      <label for="uid">Enter User ID:</label>
      <input type="text" id="uid" name="uid" placeholder="Enter User ID" />
      <label for="files">Upload Files:</label>
      <input type="file" name="files" id="files" multiple /> 
      <button type="submit">Upload Files</button>
    </form>
    <div id="uploadStatus"></div>
    <a href="/userProfile">Return to User page</a>
     
  </div>
</div>

<script src="/js/uploadDocs.js"></script>
